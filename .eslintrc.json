{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "impliedStrict": true,
      "classes": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120,
        "semi": false
      }
    ],
    "no-return-assign": "off",
    "react/destructuring-assignment": "never",
    "no-unused-vars": [
      1,
      {
        "ignoreSiblings": true,
        "argsIgnorePattern": "res|next|^err"
      }
    ],
    "react/prop-types": 0,
    "consistent-return": "off",
    "import/prefer-default-export": "off",
    "eqeqeq": "off",
    "jsx-a11y/alt-text": "off"
  },
  "plugins": ["prettier"],
  "globals": {
    "nodecg": false,
    "NodeCG": false
  }
}
